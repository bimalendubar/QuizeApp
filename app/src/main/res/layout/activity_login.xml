<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/login_text2_id"
        android:layout_marginStart="50dp"
        android:text="LOGIN NOW"
        android:textColor="@color/purple_700"
        android:textSize="25dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="15dp"
        />
    <TextView
        android:id="@+id/login_text2_id"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/login_email_id"
        android:layout_marginStart="50dp"
        android:text="Please login to continue using app"
        android:textSize="15dp"
        android:textColor="@color/purple_700"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="50dp" />
    <EditText
        android:id="@+id/login_email_id"
        android:background="@drawable/editext_gradiant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/login_pswd_id"
        android:layout_marginStart="50dp"
        android:hint="Enter Email               "
        android:inputType="textWebEmailAddress"
        android:drawableLeft="@drawable/ic_baseline_alternate_email_24"
        android:paddingLeft="15dp"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="50dp"/>

    <EditText
        android:id="@+id/login_pswd_id"
        android:background="@drawable/editext_gradiant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="50dp"
        android:hint="Password                  "
        android:inputType="textWebPassword"
        android:textAlignment="center"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:paddingLeft="15dp"
        android:layout_marginEnd="50dp" />
    <Button
        android:id="@+id/login_btn_id"
        android:background="@drawable/btn_gradiant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_pswd_id"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="LOGIN"
        android:textAlignment="center"
        android:paddingLeft="15dp"
        android:layout_marginEnd="50dp"/>
    <TextView
        android:clickable="true"
        android:id="@+id/login_singuppage_id"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/login_btn_id"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:text="Already have an account? Singup"
        android:textColor="@color/purple_700"
        android:textSize="10dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_waves"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        />

</androidx.constraintlayout.widget.ConstraintLayout>