<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignupActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/singup_text2_id"
        android:layout_marginStart="50dp"
        android:text="Stay Connected"
        android:textColor="@color/purple_700"
        android:textSize="25dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="15dp"
        />
    <TextView
        android:id="@+id/singup_text2_id"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/singup_email_id"
        android:layout_marginStart="50dp"
        android:text="Enter your email address and password\nto get access to your account"
        android:textSize="12dp"
        android:textColor="@color/purple_700"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="50dp" />
    <EditText
        android:id="@+id/singup_email_id"
        android:background="@drawable/editext_gradiant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/singup_pswd_id"
        android:layout_marginStart="50dp"
        android:hint="Enter Email               "
        android:inputType="textWebEmailAddress"
        android:drawableLeft="@drawable/ic_baseline_alternate_email_24"
        android:paddingLeft="15dp"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="50dp"/>
    <EditText
        android:id="@+id/singup_pswd_id"
        android:background="@drawable/editext_gradiant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/singup_Confirm_pswd_id"
        android:layout_marginStart="50dp"
        android:hint="Enter Passwor          "
        android:inputType="textWebPassword"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:paddingLeft="15dp"
        android:textAlignment="center"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"/>
    <EditText
        android:id="@+id/singup_Confirm_pswd_id"
        android:background="@drawable/editext_gradiant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="50dp"
        android:hint="Confirm Password   "
        android:inputType="textWebPassword"
        android:textAlignment="center"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:paddingLeft="15dp"
        android:layout_marginEnd="50dp" />
    <Button
        android:id="@+id/singup_btn_id"
        android:background="@drawable/btn_gradiant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/singup_Confirm_pswd_id"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="SING UP"
        android:textAlignment="center"
        android:paddingLeft="15dp"
        android:layout_marginEnd="50dp"/>
    <TextView
        android:id="@+id/singup_loginpage_id"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/singup_btn_id"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:text="Already have an account? Login"
        android:textColor="@color/purple_700"
        android:textSize="11dp"
        android:clickable="true"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_waves"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
      />

</androidx.constraintlayout.widget.ConstraintLayout>